.posts-wrapper
  .post
    .post-body
      .image-wrap
        - imgsrc = @post.image.nil? ? "placeholder.jpg" : @post.image.url(:medium).to_s
        = image_tag imgsrc, id: "image-preview", class: "img-responsive"
        = simple_form_for @post, html: { multipart: true } do |f|
          .row
            .col-md-12.text-center
              = f.error_notification
            .container-fluid
              .form-group.text-center
                %h3 Upload an image (this is required):
                = f.input :image, label: false, input_html: { onChange: 'loadFile(event)' }
              .form-group.text-center
                = f.input :caption, label: false, placeholder: 'Add your caption'
              .form-group.text-center
                = f.button :submit, class: "btn-success btn-block"
