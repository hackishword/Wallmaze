#comment
  .user-name
    = comment.user.try(:user_name) || "Anonymous"
  .comment-content
    = comment.content
  - if comment.user == current_user
    = link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" }, remote: true do
      %button(class="btn-xs btn btn-warning") Remove
